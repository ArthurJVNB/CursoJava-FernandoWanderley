<?xml version="1.0" encoding="UTF-8" ?> 

<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration> 
 
	<session-factory>  
		<property name="hibernate.dialect">org.hibernate.dialect.HSQLDialect</property>
		<property name="hibernate.connection.driver_class">org.hsqldb.jdbcDriver</property>
		<property name="hibernate.connection.url">jdbc:hsqldb:hsql://localhost:9090/qib</property>
		<property name="hibernate.connection.username">sa</property>
		<property name="hibernate.connection.password"></property>
		<property name="show_sql">true</property>
		<property name="hibernate.generate_statistics">false</property>
		<property name="hibernate.use_sql_comments">false</property>
	</session-factory>  
	
	<mapping class="br.com.testehibernate.model.clientes.Cliente"/>
	<mapping class="br.com.testehibernate.model.contas.ContaAbstrata"/>
	<mapping class="br.com.testehibernate.model.contas.Conta"/>
	<mapping class="br.com.testehibernate.model.contas.ContaImposto"/>
	<mapping class="br.com.testehibernate.model.contas.ContaBonificada"/>
	<mapping class="br.com.testehibernate.model.contas.Poupanca"/>
	
</hibernate-configuration> 
